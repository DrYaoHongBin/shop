<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.dao.user.UserMapper">
    <resultMap id="BaseResultMap" type="com.shop.model.user.User" >
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="phone_number" property="phoneNumber" jdbcType="VARCHAR" />
    </resultMap>
    <select id="selectUser" parameterType="user" resultType="user">
        SELECT
          username,
          phone_number,
          email
        FROM
          shop_user
        WHERE username = #{username} OR phone_number = #{phoneNumber} OR email = #{email};
    </select>
    <update id="resetPassword" parameterType="user" >
        UPDATE
          shop_user
        <set>
           password = #{password},
        </set>
        WHERE
          <if test="phoneNumber != null">
              phone_number = #{phoneNumber};
          </if>
          <if test="email != null">
              email = #{email};
          </if>
          <if test="userId != null">
              user_id = #{userId};
          </if>
    </update>
    <select id="login" parameterType="user" resultType="user">
        SELECT
          *
        FROM
          shop_user
        WHERE binary password = #{password} AND (username = #{username} OR phone_number = #{username} OR email = #{username});
    </select>
</mapper>